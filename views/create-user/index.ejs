<body class="login">
<!-- BEGIN LOGO -->
<div class="logo">
    <a href="/">
        <img src="/img/system-35.png" alt="Rebootex" />
    </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">

    <!-- BEGIN REGISTRATION FORM -->
    <form class="register-form" action="/create-user" method="post">
        <h3 class="form-title font-blue">Создать пользователя</h3>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Полное имя" name="fullname" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Адрес электронной почты" name="email" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Номер телефона" name="phone" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Город" name="city" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Домашний адрес" name="address" />
        </div>
        <p class="hint">Детали аккаунта</p>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Логин" name="username" />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Пароль" name="password" />
        </div>
        <div class="form-group">
            <select class="form-control" name="role">
                <option value="super admin">Супер-Администратор</option>
                <option value="admin">Администратор</option>
                <option value="employee">Мастер</option>
                <option value="customer">Клиент</option>
            </select>
        </div>
        <div class="form-actions">
            <button type="submit" id="create-user-btn" class="btn blue btn-block">Создать</button>
        </div>
    </form>
    <!-- END REGISTRATION FORM -->

</div>
<%
var date = new Date();
var year = date.getFullYear();
%>
<div class="copyright">&copy; Rebootex <%= year %></div>
<!-- END LOGIN -->

